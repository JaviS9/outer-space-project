          <button
            v-for="(subs) in selected_users" :key="subs.id" 
            type="button"
            class="btn btn-danger btn-sm rounded-pill p-2 me-2"
            v-on:click="deleteUser(subs.nickName, selected_users)"
          >
          {{ subs.nickName }} <i class="fa-solid fa-circle-xmark"></i>
          </button>
        </div>
      </div>
      <!--  -->
